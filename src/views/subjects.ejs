<%- include('partials/header.ejs') %>

<%- include('partials/headerNavigation.ejs') %>
<main id="main-subjects">
    <div class="container">
        <section id="subjects-grid">
            <% subjects.forEach(s => { %>
                <div class="subject-card">
                    <a class="subject-title" href="/course/<%- s.subject %>"><%- s.subject %></a>
                    <p class="teacher">Taught by <strong><%- s.teacher %></strong></p>
                    <p class="course-count-subject"><span><%- s.coursesCount %></span> Course(s)</p>
                </div>
            <%})  %>
        </section>
        <!-- end of container -->
    </div>
</main>

<%- include('partials/footer.ejs') %>